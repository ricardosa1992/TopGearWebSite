                    </div>
                <div class="details-box">
                    <span class="box-close">&times;</span>
                    <div class="title">Vehicle Details</div>
                   
                    <div class="inside">
                        <div class="wrapper row-top">
                            <div class="details-image"><img src="@carro.UrlImagem" alt="" /></div>
                            <div class="details-list">
                                <h4>@carro.Modelo</h4>
                                
                                @{ 
                                    @*if (carro.Itens != null)
                                    {
                                        foreach (var item in carro.Itens)
                                        {
                                            var desc = item.Descricao;
                                            @Html.TextBox(desc)
                                        }
                                    }*@

                                    }
                                @*5 Passengers<br>
