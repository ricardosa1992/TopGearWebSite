@model Trabalho20172.Models.LocacaoViewModel


@{
    foreach (var carro in Model.listaCarrosDisponiveis)
    {
        var categoria = "category" + carro.categoria.Id; //carro.categoria.Id;
                                                                                     //Pegar aqui o caminho da foto
        <div class="item @categoria">
                <div class="image"><img id="caminhoFotoCarro_@carro.Id" src="@carro.UrlImagem" alt="" /></div>
                <div class="info">
                    <h4>@carro.Modelo</h4>
                    <p>15 km/l (approximate)</p>
                   
                        <p style="display:inline-block"><a href="#" class="read-more">Details</a></p>
